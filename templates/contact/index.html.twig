{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h3 class="m-0 font-weight-bold text-primary">Envoi de mail</h3>
            </div>
            <div class="bg-white p-5 contact-form">
                {% for message in app.flashes('success') %}
                    <div class="primary">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="form-group">
                    {{ form_start(form) }}
                    {{ form_row(form.nom, {'label':'Nom et pr√©nom ','attr':{'class':'form-control'}}) }}


                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'label':'Votre mail ','attr':{'class':'form-control'}}) }}

                </div>
                   <div class="form-group">
                    {{ form_row(form.objet,{'label':'Objet ','attr':{'class':'form-control'}}) }}

                </div>
                <div class="form-group">
                    {{ form_row(form.message, {'label':'Votre message ','attr':{'class':'form-control'}}) }}

                </div>

                <div class="form-group">
                    <input type="submit" value="Envoyer" class="btn btn-primary py-2 px-4">
                         <a href="https://cafop-lited.com/"  class="btn btn-outline-success"> Retour au site </a>

                </div>

                {{ form_end(form) }}
            </div>

        </div>
    </div>

    {% endblock %}