{% extends 'base.html.twig' %}

{% block title %}Section index
{% endblock %}

{% block body %}
	<h2>Liste Sections</h2>
    {% for message in app.flashes('section') %}
                <div class="primary">
                    {{ message }}
                </div>
            {% endfor %}
<div><a href="{{ path('app_section_new') }}">Nouveau</a></div>
	<table class="table">
		<thead>
			<tr>

				<th>Libelle</th>
				<th>Modifier</th>
				<th>Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for section in sections %}
				<tr>

					<td>{{ section.libelle }}</td>
					<td>
						
						<a href="{{ path('app_section_edit', {'id': section.id}) }}">Modifier</a>
					</td>
					<td>
						<form method="post" action="{{ path('app_section_delete', {'id': section.id}) }}" onsubmit="return confirm('Voulez-vous supprimer?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ section.id) }}">

							<button class="btn">
								<span style="font-size: 1em; color: red;">
									<i class="fas fa-trash-alt"></i>
								</span>
                                supp
							</button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucune donnée trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	
{% endblock %}
