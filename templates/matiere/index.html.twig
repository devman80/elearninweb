{% extends 'base.html.twig' %}

{% block title %}Matiere index
{% endblock %}

{% block body %}
	<h2>Liste matieres</h2>
    {% for message in app.flashes('matiere') %}
                <div class="primary">
                    {{ message }}
                </div>
            {% endfor %}
<div><a href="{{ path('app_matiere_new') }}">Nouveau</a></div>
	<table class="table">
		<thead>
			<tr>

				<th>Code</th>
				<th>Libelle</th>
				<th>Modifier</th>
				<th>Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for matiere in matieres %}
				<tr>

					<td>{{ matiere.code }}</td>
					<td>{{ matiere.libelle }}</td>
					<td>
						
						<a href="{{ path('app_matiere_edit', {'id': matiere.id}) }}">Modifier</a>
					</td>
					<td>
						<form method="post" action="{{ path('app_matiere_delete', {'id': matiere.id}) }}" onsubmit="return confirm('Voulez-vous supprimer?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ matiere.id) }}">

							<button class="btn">
								<span style="font-size: 1em; color: red;">
									<i class="fas fa-trash-alt"></i>
								</span>
                                supp
							</button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucune donnée trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	
{% endblock %}
