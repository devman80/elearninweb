{% extends 'base.html.twig' %}

{% block title %}Liste des auditeurs
{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">Liste des auditeurs</h3>
        </div>
        <div>
    <a href="{{ path('app_paiement_index2') }}" class="btn btn-outline-danger btns" data-turbo="true"><i class="fa-solid fa-bars"></i>&nbsp;&nbsp;Paiements scolarité</a>
        </div>
        {% for message in app.flashes('message') %}
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="alert alert-success alert-dismissible">
                        {{ message }}

                    </div>
                </div>
            </div>

        {% endfor %}



        <div class="card-body">
            <div class="table-responsive">
	<table id="app_elearning" class="table table-striped dt-responsive nowrap table-bordered table-hover" style="width:100%">
		<thead class="table-primary">
                        <tr>

                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Photo</th>
                            <th>Sexe</th>
                            <th>Contact</th>
                            <th>Date inscription</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inscription in inscriptions %}
                            <tr>

                                <td>{{ inscription.nom }}</td>
                                <td>{{ inscription.prenom }}</td>
                                <td>{% if inscription.brochureFilename is not empty %}

                                    <img src="{{ asset('uploads/brochures/'~inscription.brochureFilename )}}" style="max-width: 100px;  max-height: 200px"/>


                                {% else %}Aucune photo
                                    {% endif %}</td>

                                    <td>{{ inscription.sexe }}</td>
                                    <td>{{ inscription.contact }}</td>
                                    <td> {{ date_format(inscription.createdAt) }}</td>

                                    <td>
                                        <a href="{{ path('app_inscription_show', {'id': inscription.id}) }}">details</a>
                                        <a href="{{ path('app_inscription_edit', {'id': inscription.id}) }}">modifier</a>
                                    </td>
                                </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="30">Aucune donnée</td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                    {% endblock %}
