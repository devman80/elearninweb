{% extends 'layout.html.twig' %}

{% block title %}Profil de
    {{ app.user.nom }}
{% endblock %}

{% block body %}


    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#">Profil de : {{ app.user.nom|upper }} {{ app.user.prenom|upper }}  </a></li>

                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">

                            <img src="{{ asset('uploads/brochures/'~app.user.brochureFilename )}}"   class="rounded-circle img-fluid" style="width: 150px;">


                            <h5 class="my-3">{{ app.user.nom|upper }}</h5>
                            <p class="text-muted mb-1">Auditeur en <b>{{ section|upper }} </b></p>
                            <div class="d-flex justify-content-center mb-2">

                                <button type="button" class="btn btn-outline-primary ms-1">

                                    <a href="{{ path("user_modifier_editpass" ) }}">
                                        Modifier password
                                    </a>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fas fa-globe fa-lg text-warning"></i>
                                    <p class="mb-0">https://mdbootstrap.com</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                                    <p class="mb-0">mdbootstrap</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                                    <p class="mb-0">@mdbootstrap</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                    <p class="mb-0">mdbootstrap</p>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                    <p class="mb-0">mdbootstrap</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Nom</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.nom|upper }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Prénoms</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.prenom|upper }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Phone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">
                                        {{ phone }}
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Section</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0"> <b> {{ section }} </b> </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Nationalité</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ nationalite|country_name('fr') }}</p>
                                </div>
                            </div>

                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Lieu d'habitation</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ habitation|upper }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">
                            <table  style="width:100%">
                                <thead class="table-primary">
                                    <tr>

                                        <th class="alignements">Matières</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    {% set i = 1 %}
                                    {% for matiere in matieres %}

                                        <tr>

                                            <td>
                                                {{ matiere.libelle  }}


                                            </td>
                                            <td>
                                                <a href="membre/se?id={{ matiere.id }}">
                                                    Voir cours
                                                </a>
                                            </td>


                                        </tr>


                                    {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
